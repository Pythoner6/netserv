{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^flake.nix$"],
      "matchStrings": [
        "#\\s+renovate:\\s+(?<datasource>.*?)(=(?<registryUrl>.*?))? package=(?<depName>.*?) version=(?<currentValue>.*?)\\s+url = \"(?<tarballUrl>[^\"]*)\";\\s+digest = \"(?<currentDigest>[^\"]*)\";"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": ["^flake.nix$"],
      "matchStrings": [
        "#\\s+renovate:\\s+flux version=(?<currentValue>.*?)(?<urlIndent>\\s+)url = \"[^\"]*\";(?<digestIndent>\\s+)digest = \"(?<currentDigest>[^\"]*)\";"
      ],
      "datasourceTemplate": "github-release-attachments",
      "depNameTemplate": "fluxcd/flux2",
      "autoReplaceStringTemplate": "# renovate: flux version={{{newValue}}}{{{urlIndent}}} url = \"https://github.com/{{{depName}}}/releases/download/{{{newValue}}}/flux_{{{newValue}}}_linux_amd64.tar.gz\";{{{digestIndent}}} digest = \"{{{newDigest}}}\";"
    }
  ],
  "enabledManagers": ["regex"],
  "prHourlyLimit": 10
}
